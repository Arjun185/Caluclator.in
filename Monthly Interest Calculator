<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Monthly Interest Calculator - Calculator.in</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        h1 { color: rgb(40, 167, 69); }
        .container { max-width: 500px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background: #f4f4f4; }
        label { display: block; margin: 10px 0 5px; }
        input { width: 100%; padding: 8px; margin-bottom: 10px; }
        button { background: rgb(40, 167, 69); color: white; border: none; padding: 10px 20px; cursor: pointer; }
        #result { margin-top: 20px; font-weight: bold; color: rgb(40, 167, 69); }
    </style>
</head>
<body>
    <div id="navbar"></div>

    <div class="container">
        <h1>Monthly Interest Calculator</h1>
        <p>Calculate monthly interest with ease. Enter your principal amount, interest rate, and time period to get started.</p>

        <label for="principal">Principal Amount (₹):</label>
        <input type="number" id="principal" placeholder="Enter Principal Amount">

        <label for="rate">Monthly Interest Rate (%):</label>
        <input type="number" id="rate" placeholder="Enter Monthly Interest Rate">

        <label for="fromDate">From Date:</label>
        <input type="date" id="fromDate">

        <label for="toDate">To Date:</label>
        <input type="date" id="toDate">

        <button onclick="calculateInterest()">Calculate Interest</button>

        <div id="result"></div>
    </div>

    <script>
        function calculateInterest() {
            const principal = parseFloat(document.getElementById('principal').value);
            const rate = parseFloat(document.getElementById('rate').value);
            const fromDate = new Date(document.getElementById('fromDate').value);
            const toDate = new Date(document.getElementById('toDate').value);

            if (isNaN(principal) || isNaN(rate) || isNaN(fromDate) || isNaN(toDate)) {
                document.getElementById('result').innerText = "Please enter valid inputs.";
                return;
            }

            const monthsDiff = (toDate.getFullYear() - fromDate.getFullYear()) * 12 + (toDate.getMonth() - fromDate.getMonth());
            const interest = (principal * rate * monthsDiff) / 100;
            const totalAmount = principal + interest;

            document.getElementById('result').innerHTML = `
                Interest: ₹${interest.toFixed(2)}<br>
                Total Amount: ₹${totalAmount.toFixed(2)}
            `;
        }

        // Load navigation dynamically
        fetch('navbar.html')
            .then(response => response.text())
            .then(data => document.getElementById('navbar').innerHTML = data);
    </script>
</body>
</html>
